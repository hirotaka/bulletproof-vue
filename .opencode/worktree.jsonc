{
  "$schema": "https://registry.kdco.dev/schemas/worktree.json",

  "sync": {
    // Copy .env files from each app (not tracked by git)
    "copyFiles": [
      "apps/bulletproof-nuxt/.env",
      "apps/bulletproof-nuxt-regle/.env",
      "apps/bulletproof-nuxt-tanstack-form/.env",
      "apps/bulletproof-nuxt-formwerk/.env",
      "apps/bulletproof-nuxt-pinia-colada/.env"
    ],

    // Symlink node_modules to avoid re-installing in each worktree
    "symlinkDirs": [
      "node_modules",
      "apps/bulletproof-nuxt/node_modules",
      "apps/bulletproof-nuxt-regle/node_modules",
      "apps/bulletproof-nuxt-tanstack-form/node_modules",
      "apps/bulletproof-nuxt-formwerk/node_modules",
      "apps/bulletproof-nuxt-pinia-colada/node_modules"
    ],

    "exclude": []
  },

  "hooks": {
    // No install needed since node_modules are symlinked
    "postCreate": [],
    "preDelete": []
  }
}
