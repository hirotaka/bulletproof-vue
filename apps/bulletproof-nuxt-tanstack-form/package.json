{
  "name": "bulletproof-nuxt-tanstack-form",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:clean": "rm -rf db/test.db",
    "test:e2e:prepare": "pnpm test:e2e:clean && pnpm db:push:test",
    "test:e2e:preview": "nuxt preview --dotenv .env.test -p 3100",
    "test:e2e:dev": "nuxt dev --dotenv .env.test -p 3100",
    "test:e2e:ci": "pnpm test:e2e:prepare && pnpm build && start-server-and-test test:e2e:preview http://localhost:3100 'NUXT_PORT=3100 pnpm test:e2e'",
    "test:e2e:ci:debug": "pnpm test:e2e:prepare && pnpm build && start-server-and-test test:e2e:preview http://localhost:3100 'NUXT_PORT=3100 pnpm test:e2e:debug'",
    "test:e2e:ci:dev": "pnpm test:e2e:prepare && start-server-and-test test:e2e:dev http://localhost:3100 'NUXT_PORT=3100 pnpm test:e2e:debug'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:test": "dotenv -e .env.test -- drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:push:test": "dotenv -e .env.test -- drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx db/seed.ts",
    "db:clear:d1": "wrangler d1 execute bulletproof-nuxt-db --remote --yes --file db/clear.sql",
    "db:clear:d1:preview": "wrangler d1 execute bulletproof-nuxt-preview-db --remote --yes --file db/clear.sql",
    "db:seed:d1": "wrangler d1 execute bulletproof-nuxt-db --remote --yes --file db/seed.sql",
    "db:seed:d1:preview": "wrangler d1 execute bulletproof-nuxt-preview-db --remote --yes --file db/seed.sql",
    "lint": "eslint .",
    "type-check": "nuxt typecheck"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@pinia/nuxt": "^0.11.3",
    "@tanstack/vue-form": "^1.0.0",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "lucide-vue-next": "^0.563.0",
    "marked": "^17.0.0",
    "nuxt": "^4.2.1",
    "nuxt-auth-utils": "^0.5.25",
    "pinia": "^3.0.0",
    "pinia-plugin-persistedstate": "^4.7.1",
    "reka-ui": "^2.6.0",
    "tailwind-merge": "^3.0.0",
    "vue": "3.5.28",
    "vue-dompurify-html": "^5.3.0",
    "vue-router": "^4.6.3",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260124.0",
    "@ngneat/falso": "^8.0.2",
    "@nuxt/eslint": "^1.10.0",
    "@nuxt/test-utils": "^3.20.1",
    "@playwright/test": "^1.50.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "@vue/test-utils": "^2.4.6",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^10.0.0",
    "happy-dom": "^20.0.10",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.0",
    "unplugin-vue-components": "^31.0.0",
    "vitest": "^4.0.0",
    "vue-tsc": "^3.0.0",
    "wrangler": "^4.60.0"
  },
  "lint-staged": {
    "*.+(ts|tsx|vue)": [
      "pnpm lint",
      "bash -c 'pnpm type-check'"
    ]
  }
}
